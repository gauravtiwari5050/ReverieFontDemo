<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <TextView
        android:textSize="16sp"
        android:text="Android Default Font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/default_font_text"
        android:textSize="22sp"
        android:text="पुरुषों के वर्चस्व वाले गेमिंग क्षेत्र में अनिला ने गाढ़े कामयाबी के झंडे"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16sp"
        android:text="Reverie Font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/reverie_font_text"
        android:textSize="22sp"
        android:text="पुरुषों के वर्चस्व वाले गेमिंग क्षेत्र में अनिला ने गाढ़े कामयाबी के झंडे"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</LinearLayout>
